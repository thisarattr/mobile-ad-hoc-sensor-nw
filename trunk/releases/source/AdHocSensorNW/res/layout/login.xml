<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal">
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="match_parent" android:layout_width="match_parent">
        <TableRow android:id="@+id/tableRow1" android:layout_width="fill_parent" android:layout_height="200dip">
            <TextView android:layout_width="wrap_content" android:id="@+id/txtViewLogin" android:layout_height="wrap_content" android:text="Please Login..." android:textSize="20dip"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow5" android:layout_width="fill_parent" android:layout_height="50dip">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewLoingError"></TextView>
        </TableRow>
        <TableRow android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="35dip" android:id="@+id/tableRow2">
            <TextView android:layout_width="100dip" android:id="@+id/textView1" android:layout_gravity="center_vertical" android:layout_height="wrap_content" android:text="Username"></TextView>
            <EditText android:id="@+id/editTxtUsernameLogin" android:layout_gravity="center_vertical" android:layout_width="150dip" android:textSize="12dip" android:layout_height="35dip"></EditText>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="35dip" android:id="@+id/tableRow3" android:layout_gravity="center_horizontal">
            <TextView android:layout_width="100dip" android:id="@+id/textView2" android:layout_height="wrap_content" android:text="Password" android:layout_gravity="center_vertical"></TextView>
            <EditText android:id="@+id/editTxtPasswordLogin" android:layout_gravity="bottom" android:layout_width="150dip" android:password="true" android:textSize="12dip" android:layout_height="35dip"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="fill_parent" android:layout_height="35dip" android:layout_marginTop="15dip">
            <Button android:layout_height="35dip" android:layout_width="50dip" android:id="@+id/btnSignupLogin" android:text="Sign Up"></Button>
            <Button android:id="@+id/btnLogin" android:text="Login" android:layout_height="35dip" android:layout_width="50dip"></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>
