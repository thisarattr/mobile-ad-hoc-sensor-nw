<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true">
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello" android:textSize="18px" android:typeface="normal" android:id="@+id/txtViewTitle"/>
<LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent">
    <TextView android:layout_marginTop="30px" android:text="Magnetometer Reading :" android:textSize="16px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewReadingLbl"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30px" android:text="0" android:textSize="16px" android:id="@+id/txtViewReadingVal" android:layout_marginLeft="8px"></TextView>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_marginTop="10px">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewX" android:text="X : " android:textSize="16px"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00" android:layout_weight="1" android:textSize="16px" android:id="@+id/txtViewXVla"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewY" android:text="Y : " android:textSize="16px"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewYVal" android:text="00" android:layout_weight="1" android:textSize="16px"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewZ" android:text="Z : " android:textSize="16px"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewZVal" android:text="00" android:layout_weight="1" android:textSize="16px"></TextView>
</LinearLayout>
<LinearLayout android:id="@+id/linearLayout5" android:layout_height="wrap_content" android:layout_width="fill_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GPS Location : " android:textSize="16px" android:layout_marginTop="30px" android:id="@+id/txtViewGpsLocLbl"></TextView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30px" android:layout_marginLeft="20px" android:textSize="16px" android:id="@+id/txtViewGpsVal" android:text="0.0, 0.0"></TextView>
</LinearLayout>
<LinearLayout android:id="@+id/linearLayout6" android:layout_height="wrap_content" android:layout_width="match_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="16px" android:text="GPS Disable please enable." android:visibility="invisible" android:id="@+id/txtViewGpsDisable"></TextView>
    <Button android:layout_width="wrap_content" android:id="@+id/btnGpsEnable" android:text="GPS On" android:textSize="16px" android:layout_height="30dip" android:visibility="invisible"></Button>
</LinearLayout>
<TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableLayout1" android:layout_marginTop="30px">
    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewAvaSns"  android:text="Available Sensors" android:textSize="18px"></TextView>
    </TableRow>
    <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_width="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewSensors" android:textSize="16px" android:layout_marginTop="10px" android:text="null"></TextView>
    </TableRow>
</TableLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3" android:layout_marginTop="20px">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnViewData" android:text="View Data"></Button>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnAddJob" android:text="Add Job"></Button>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnViewJob" android:text="View Job"></Button>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnSync" android:text="Sync"></Button>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout4">
    <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/txtViewBtnClicked"></TextView>
</LinearLayout>
</LinearLayout>
