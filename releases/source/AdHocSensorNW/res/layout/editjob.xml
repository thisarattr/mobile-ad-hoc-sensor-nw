<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
	<ScrollView android:id="@+id/scrollView1" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TableLayout android:id="@+id/tableLayout2" android:layout_width="match_parent" android:layout_height="match_parent">
			<LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:layout_width="wrap_content" android:textSize="24px" android:layout_marginLeft="10dip" android:layout_height="wrap_content" android:id="@+id/txtViewEditJob" android:text="Edit Job"></TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_marginTop="10dip" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewSensorType" android:text="Sensor Type" android:layout_height="wrap_content"></TextView>
				<Spinner android:id="@+id/spinSensorType" android:layout_height="match_parent" android:layout_width="150dip"></Spinner>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout3" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewLat" android:text="Latitude" android:layout_height="wrap_content"></TextView>
				<EditText android:id="@+id/editTxtLat" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="150dip" android:inputType="numberDecimal"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout4" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_height="wrap_content" android:textSize="16px" android:layout_width="135dip" android:text="Longitude" android:id="@+id/txtViewLon"></TextView>
				<EditText android:id="@+id/editTxtLon" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="150dip" android:inputType="numberDecimal"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout5" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewLocRange" android:text="Location Range" android:layout_height="wrap_content"></TextView>
				<EditText android:id="@+id/editTxtLocRange" android:textSize="12dip" android:layout_width="150dip" android:layout_height="match_parent" android:inputType="numberDecimal"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout6" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewStart" android:text="Start Time" android:layout_height="wrap_content"></TextView>
				<Button android:text="Button" android:id="@+id/btnJobStartDate" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="90dip"></Button>
				<Button android:text="Button" android:id="@+id/btnJobStartTime" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="60dip"></Button>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout7" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewEnd" android:text="End Time" android:layout_height="wrap_content"></TextView>
				<Button android:text="Button" android:id="@+id/btnJobEndDate" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="90dip"></Button>
				<Button android:text="Button" android:id="@+id/btnJobEndTime" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="60dip"></Button>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout8" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:textSize="16px" android:id="@+id/txtViewFreq" android:text="Frequency (min)" android:layout_height="wrap_content" android:layout_width="135dip"></TextView>
				<EditText android:id="@+id/editTxtFreqJob" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="150dip" android:inputType="number"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout9" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewTimePeriod" android:text="Time Period" android:layout_height="wrap_content"></TextView>
				<EditText android:id="@+id/editTxtTimePeriodJob" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="150dip" android:inputType="number"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout10" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:layout_width="135dip" android:textSize="16px" android:id="@+id/txtViewNodes" android:text="Nodes" android:layout_height="wrap_content"></TextView>
				<EditText android:id="@+id/editTxtNodes" android:textSize="12dip" android:layout_height="match_parent" android:layout_width="150dip" android:inputType="number"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout11" android:layout_width="wrap_content" android:layout_height="35dip">
				<TextView android:text="Description" android:id="@+id/txtViewDesc" android:layout_width="135dip" android:layout_height="wrap_content" android:textSize="16px" ></TextView>
				<EditText android:id="@+id/editTxtDesc" android:layout_width="150dip" android:layout_height="match_parent" android:textSize="12dip" android:inputType="text"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayout12" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="30dip">
				<Button android:text="Discard" android:layout_width="80dip" android:layout_height="wrap_content" android:id="@+id/btnJobDiscard" android:layout_marginLeft="30dip"></Button>
				<Button android:text="Reset" android:layout_width="80dip" android:layout_height="wrap_content" android:id="@+id/btnJobReset" android:layout_marginLeft="10dip"></Button>
				<Button android:text="Save" android:layout_width="80dip" android:layout_height="wrap_content" android:id="@+id/btnJobSave" android:layout_marginLeft="10dip"></Button>
			</LinearLayout>
		</TableLayout>
	</ScrollView>
</TableLayout>
