<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update Profile" android:id="@+id/txtViewUpdateProf" android:textSize="18px" android:layout_marginTop="10dip" android:layout_marginLeft="10dip"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="35dip" android:layout_marginTop="15dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:id="@+id/txtViewUsername" android:text="Username"></TextView>
        <EditText android:id="@+id/editTxtUsernameUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="text" android:textSize="12dip" android:enabled="false"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout3" android:layout_width="wrap_content" android:layout_height="35dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:text="Old Password" android:id="@+id/txtViewOldPassword"></TextView>
        <EditText android:id="@+id/editTxtOldPasswordUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="textPassword" android:password="true"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout4" android:layout_width="wrap_content" android:layout_height="35dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:text="New Password" android:id="@+id/txtViewNewPassword"></TextView>
        <EditText android:id="@+id/editTxtNewPasswordUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="textPassword" android:password="true" android:enabled="false"></EditText>
        <CheckBox android:text="" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/chkBxChangePw" android:checked="false"></CheckBox>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout5" android:layout_width="wrap_content" android:layout_height="35dip">
    	<TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:text="Confirm PW" android:id="@+id/txtViewConfirmNewPassword"></TextView>
        <EditText android:id="@+id/editTxtConfirmNewPasswordUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="textPassword" android:password="true" android:enabled="false"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout6" android:layout_width="wrap_content" android:layout_height="35dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:id="@+id/txtViewFullname" android:text="Full Name"></TextView>
        <EditText android:id="@+id/editTxtFullnameUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="text" android:textSize="12dip"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout7" android:layout_width="wrap_content" android:layout_height="35dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:text="E-mail" android:id="@+id/txtViewEmail"></TextView>
        <EditText android:id="@+id/editTxtEmailUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="textEmailAddress" android:textSize="12dip"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout8" android:layout_width="wrap_content" android:layout_height="35dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:text="User Rank" android:id="@+id/txtViewRank"></TextView>
        <EditText android:id="@+id/editTxtRankUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="number" android:textSize="12dip" android:enabled="false"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout9" android:layout_width="wrap_content" android:layout_height="35dip">
        <TextView android:layout_width="110dip" android:textSize="16px" android:layout_height="wrap_content" android:text=" Created Date" android:id="@+id/txtViewDate"></TextView>
        <EditText android:id="@+id/editTxtDatelUpdate" android:layout_width="170dip" android:layout_height="wrap_content" android:inputType="datetime" android:textSize="12dip" android:enabled="false"></EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout10" android:layout_width="wrap_content" android:layout_height="40dip" android:layout_marginTop="20dip">
        <Button android:layout_height="wrap_content" android:text="Cancel" android:id="@+id/btnCancelUpdateUser" android:layout_width="100dip" android:layout_marginLeft="60dip"></Button>
        <Button android:layout_height="wrap_content" android:id="@+id/btnUpdateUser" android:text="Update" android:layout_width="100dip" android:layout_marginLeft="20dip"></Button>
    </LinearLayout>
</TableLayout>
